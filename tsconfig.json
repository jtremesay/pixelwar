{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "types": [
      "vite/client"
    ],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "paths": {
      "@/*": [
        "./*"
      ],
      "@s:daphne/*": [
        "./.venv/lib/python3.13/site-packages/daphne/static/daphne/*"
      ],
      "@t:daphne/*": [
        "./.venv/lib/python3.13/site-packages/daphne/templates/daphne/*"
      ],
      "@s:pixelwar/*": [
        "./pixelwar/static/pixelwar/*"
      ],
      "@t:pixelwar/*": [
        "./pixelwar/templates/pixelwar/*"
      ]
    }
  },
  "include": [
    "frontend"
  ]
}